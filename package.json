{
  "name": "drk-launcher",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "build-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/build-electron.mjs && vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "start": "npm run build && electron ."
  },
  "dependencies": {
    "electron": "^31.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.5",
    "vite-plugin-electron-renderer": "^0.14.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.0"
  },
  "build": {
    "appId": "com.drk.launcher",
    "productName": "DRK Launcher",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "DRK-Launcher-${version}-Setup.exe"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "DRK-Launcher-${version}.AppImage",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
